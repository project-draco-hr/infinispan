{
  try {
    lockBreakingService.submit(new Runnable(){
      public void run(){
        try {
          updateStateOnNodesLeaving(leavers);
        }
 catch (        Exception e) {
          log.error("Exception whilst updating state",e);
        }
      }
    }
);
  }
 catch (  RejectedExecutionException ree) {
    log.debug("Unable to submit task to executor",ree);
  }
}
