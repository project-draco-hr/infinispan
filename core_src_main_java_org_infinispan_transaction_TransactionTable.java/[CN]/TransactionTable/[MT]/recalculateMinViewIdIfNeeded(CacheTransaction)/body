{
  if (isStandaloneCache())   return;
  if (removeTx == null)   throw new NullPointerException("Cannot pass a null tx here!");
  if (removeTx.getViewId() < minTxViewId)   throw new IllegalStateException("Cannot have a tx that has a viewId(" + removeTx.getViewId() + ") smaller than min view id ("+ minTxViewId+ ")");
  if (removeTx.getViewId() != getCurrentViewId()) {
    calculateMinViewId();
  }
}
