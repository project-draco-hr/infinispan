{
  Unmarshaller unmarshaller;
  if (isReentrant) {
    unmarshaller=factory.createUnmarshaller(configuration);
  }
 else {
    unmarshaller=unmarshallerTL.get();
  }
  if (log.isTraceEnabled())   log.trace("Start unmarshaller@%s after retrieving marshaller from %s",Integer.toHexString(System.identityHashCode(unmarshaller)),isReentrant ? "factory" : "thread local");
  unmarshaller.start(Marshalling.createByteInput(is));
  return unmarshaller;
}
