{
  StringBuilder sb=new StringBuilder(jpaPattern.length());
  sb.append('^');
  for (int i=0; i < jpaPattern.length(); i++) {
    char c=jpaPattern.charAt(i);
switch (c) {
case '%':
      sb.append(".*");
    break;
case '_':
  sb.append('.');
break;
case '(':
case ')':
case '[':
case ']':
case '$':
case '^':
case '.':
case '{':
case '}':
case '|':
case '\\':
sb.append('\\');
default :
sb.append(c);
break;
}
}
sb.append('$');
return sb.toString();
}
