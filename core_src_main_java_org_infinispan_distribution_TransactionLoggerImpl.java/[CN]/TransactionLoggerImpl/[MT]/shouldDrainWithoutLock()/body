{
  if (enabled) {
    int sz=size();
    boolean shouldLock=(previousSize > 0 && growthCount > GROWTH_COUNT_THRESHOLD) || sz < DRAIN_LOCK_THRESHOLD;
    if (!shouldLock) {
      if (sz > previousSize && previousSize > 0)       growthCount++;
      previousSize=sz;
      return true;
    }
 else {
      return false;
    }
  }
 else   return false;
}
