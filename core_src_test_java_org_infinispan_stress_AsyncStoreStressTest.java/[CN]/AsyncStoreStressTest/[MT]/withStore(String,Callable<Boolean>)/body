{
  Lock lock=null;
  boolean result=false;
  try {
    lock=locks.acquireLock(Thread.currentThread(),key,30,TimeUnit.SECONDS);
    if (lock != null) {
      result=call.call().booleanValue();
    }
  }
 catch (  PersistenceException e) {
    e.printStackTrace();
    result=false;
  }
catch (  InterruptedException e) {
    e.printStackTrace();
    result=false;
  }
 finally {
    if (lock == null)     return false;
 else {
      lock.unlock();
      return result;
    }
  }
}
