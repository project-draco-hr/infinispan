{
  if (directory.exists() && directory.isDirectory()) {
    System.gc();
    File[] files=directory.listFiles();
    if (null != files) {
      for (int i=0; i < files.length; i++) {
        if (files[i].isDirectory()) {
          deleteFilesFromDirectory(files[i]);
        }
 else {
          files[i].delete();
        }
      }
    }
    directory.delete();
  }
}
