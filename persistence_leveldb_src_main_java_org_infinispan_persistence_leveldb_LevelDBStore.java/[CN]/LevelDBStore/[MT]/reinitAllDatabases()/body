{
  try {
    db.close();
  }
 catch (  IOException e) {
    log.warnUnableToCloseDb(e);
  }
  try {
    expiredDb.close();
  }
 catch (  IOException e) {
    log.warnUnableToCloseExpiredDb(e);
  }
  db=reinitDatabase(getQualifiedLocation(),dataDbOptions());
  expiredDb=reinitDatabase(getQualifiedExpiredLocation(),expiredDbOptions());
}
