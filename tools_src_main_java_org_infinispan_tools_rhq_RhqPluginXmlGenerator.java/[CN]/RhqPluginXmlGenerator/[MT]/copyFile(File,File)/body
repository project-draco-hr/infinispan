{
  FileChannel inCh=new FileInputStream(in).getChannel();
  FileChannel outCh=new FileOutputStream(out).getChannel();
  try {
    inCh.transferTo(0,inCh.size(),outCh);
  }
 catch (  IOException e) {
    throw e;
  }
 finally {
    if (inCh != null)     inCh.close();
    if (outCh != null)     outCh.close();
  }
}
