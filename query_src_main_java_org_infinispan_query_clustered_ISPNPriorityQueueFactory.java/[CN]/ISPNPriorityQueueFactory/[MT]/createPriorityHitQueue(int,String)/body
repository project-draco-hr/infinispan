{
  try {
    Class clazz=Class.forName(className);
    Constructor c=clazz.getDeclaredConstructors()[0];
    AccessibleObject ao=c;
    ao.setAccessible(true);
    Object ob=c.newInstance(size);
    return (PriorityQueue<FieldDoc>)ob;
  }
