{
  Configuration c=getDefaultStandaloneConfig(true);
  c.fluent().transaction().transactionMode(TransactionMode.TRANSACTIONAL).indexing().indexLocalOnly(false).addProperty("hibernate.search.default.directory_provider","ram").addProperty("hibernate.search.lucene_version","LUCENE_CURRENT");
