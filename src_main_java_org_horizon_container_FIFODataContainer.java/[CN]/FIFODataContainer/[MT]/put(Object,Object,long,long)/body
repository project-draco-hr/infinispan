{
  InternalCacheEntry ice=entries.get(k);
  if (ice != null) {
    ice.setValue(v);
    ice=ice.setLifespan(lifespan).setMaxIdle(maxIdle);
    if (ice.isExpired()) {
      entries.remove(ice);
    }
 else {
      entries.put(k,ice);
    }
  }
 else {
    entries.put(k,InternalEntryFactory.create(k,v,lifespan,maxIdle));
  }
}
