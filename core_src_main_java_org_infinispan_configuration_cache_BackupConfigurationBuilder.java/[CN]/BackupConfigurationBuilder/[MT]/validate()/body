{
  takeOfflineBuilder.validate();
  stateTransferBuilder.validate();
  if (site == null)   throw new CacheConfigurationException("The 'site' must be specified!");
  if (backupFailurePolicy == BackupFailurePolicy.CUSTOM && (failurePolicyClass == null)) {
    throw new CacheConfigurationException("It is required to specify a 'failurePolicyClass' when using a " + "custom backup failure policy!");
  }
}
