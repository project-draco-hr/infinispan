def main():
    print '\n\n\t  INFINISPAN Log file fixer.  Makes log files more readable by replacing ugly JGroups addresses to more friendly CACHE1, CACHE2, etc addresses.\n\n\t  Usage:\n\n\t    $ bin/fixlogs.py\n\n\t  TODO: be able to specify which view to select as the correct one, and to specify input and output files.\n\n  '
    expr = re.compile(('.*Received new cluster view.*\\|%s. \\[(.*)\\].*' % VIEW_TO_USE))
    find(expr)
    with open(INPUT_FILE) as f_in:
        with open(OUTPUT_FILE, 'w+') as f_out:
            for l in f_in:
                for c in addresses.keys():
                    l = l.replace(c, addresses[c])
                f_out.write(l)
    print ('Processed %s and generated %s.  The following replacements were made: ' % (INPUT_FILE, OUTPUT_FILE))
    sorted_keys = new_addresses.keys()
    sorted_keys.sort()
    for a in sorted_keys:
        print ('  %s --> %s' % (new_addresses[a], a))
