{
  InternalCacheEntry e=entries.get(k);
  if (e != null) {
    e.setValue(v);
    InternalCacheEntry original=e.clone();
    e.setVersion(version);
    e=entryFactory.update(e,lifespan,maxIdle);
    if (original == e) {
      e.reincarnate();
    }
  }
 else {
    e=entryFactory.createNewEntry(k,v,version,lifespan,maxIdle);
  }
  entries.put(k,e);
}
