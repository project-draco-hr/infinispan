{
  if (ctx.isInTxScope() && !isFromStateTransfer(ctx)) {
    EntryVersion updatedEntryVersion=((TxInvocationContext)ctx).getCacheTransaction().getUpdatedEntryVersions().get(entry.getKey());
    Metadata commitMetadata;
    if (updatedEntryVersion != null) {
      if (metadata == null && entry.getMetadata() == null)       commitMetadata=new EmbeddedMetadata.Builder().version(updatedEntryVersion).build();
 else       if (metadata != null)       commitMetadata=metadata.builder().version(updatedEntryVersion).build();
 else       commitMetadata=entry.getMetadata().builder().version(updatedEntryVersion).build();
    }
 else {
      commitMetadata=metadata != null ? metadata : entry.getMetadata();
    }
    cdl.commitEntry(entry,commitMetadata,command,ctx);
  }
 else {
    cdl.commitEntry(entry,entry.getMetadata(),command,ctx);
  }
}
