{
  TypedProperties tp=new TypedProperties();
  if (s != null && s.trim().length() > 0) {
    InputStream stream=new ByteArrayInputStream(s.getBytes());
    try {
      tp.load(stream);
    }
 catch (    IOException e) {
      throw new ConfigurationException("Unable to parse properties string " + s,e);
    }
  }
  return tp;
}
