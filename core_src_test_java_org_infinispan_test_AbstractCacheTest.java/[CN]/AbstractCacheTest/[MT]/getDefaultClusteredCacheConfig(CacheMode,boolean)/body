{
  ConfigurationBuilder builder=TestCacheManagerFactory.getDefaultCacheConfiguration(transactional);
  builder.clustering().cacheMode(mode).stateRetrieval().fetchInMemoryState(false).transaction().syncCommitPhase(true).syncRollbackPhase(true).cacheStopTimeout(0L);
  if (mode.isSynchronous())   builder.clustering().sync();
 else   builder.clustering().async();
  return builder;
}
