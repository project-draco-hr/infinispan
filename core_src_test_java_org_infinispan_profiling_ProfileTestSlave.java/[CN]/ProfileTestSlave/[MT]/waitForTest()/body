{
  Thread t=new Thread(){
    @Override public void run(){
      try {
        System.in.read();
      }
 catch (      Exception e) {
      }
    }
  }
;
  cacheManager.addListener(new ShutdownHook(t));
  System.out.println("Slave listening for remote connections.  Hit Enter when done.");
  t.start();
  t.join();
}
