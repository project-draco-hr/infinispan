{
  ConfigurationBuilder configurationBuilder=TestCacheManagerFactory.getDefaultCacheConfiguration(true);
  configurationBuilder.clustering().cacheMode(CacheMode.DIST_SYNC).stateTransfer().fetchInMemoryState(true).l1().enable().enableOnRehash().sync().replTimeout(10000).transaction().transactionMode(TransactionMode.TRANSACTIONAL).locking().lockAcquisitionTimeout(10000).invocationBatching().disable().deadlockDetection().disable().jmxStatistics().disable().indexing().enable().indexLocalOnly(false).addProperty("hibernate.search.default.directory_provider","ram").addProperty("hibernate.search.lucene_version","LUCENE_CURRENT");
  createClusteredCaches(2,"lucene",configurationBuilder);
}
