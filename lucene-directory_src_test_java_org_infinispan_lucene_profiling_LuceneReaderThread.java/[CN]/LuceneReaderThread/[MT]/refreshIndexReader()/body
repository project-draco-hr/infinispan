{
  if (indexReader == null) {
    indexReader=IndexReader.open(directory,true);
  }
 else {
    IndexReader before=indexReader;
    indexReader=indexReader.reopen();
    if (before != indexReader) {
      before.close();
    }
  }
  if (searcher != null) {
    searcher.close();
  }
  searcher=new IndexSearcher(indexReader);
}
