{
  int numMods=modifications == null ? 0 : modifications.length;
  int i=0;
  final int params=3;
  Object[] retval=new Object[numMods + params];
  retval[i++]=globalTx;
  retval[i++]=onePhaseCommit;
  retval[i]=numMods;
  if (numMods > 0)   System.arraycopy(modifications,0,retval,params,numMods);
  return retval;
}
