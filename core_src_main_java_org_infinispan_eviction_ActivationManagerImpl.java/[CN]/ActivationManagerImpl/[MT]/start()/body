{
  enabled=clm.isUsingPassivation() && !clm.isShared();
  if (enabled) {
    store=clm.getCacheStore();
    if (store == null)     throw new CacheConfigurationException("Passivation can only be used with a CacheLoader that implements CacheStore!");
    statisticsEnabled=cfg.jmxStatistics().enabled();
  }
}
