{
  if (configurationPropertiesFile == null || configurationPropertiesFile.trim().length() == 0)   return;
  InputStream i=FileLookupFactory.newInstance().lookupFile(configurationPropertiesFile,getClassLoader());
  if (i != null) {
    Properties p=new Properties();
    try {
      p.load(i);
    }
 catch (    IOException ioe) {
      throw new ConfigurationException("Unable to read environment properties file " + configurationPropertiesFile,ioe);
    }
 finally {
      Util.close(i);
    }
    for (    String propertyName : p.stringPropertyNames()) {
      poolProperties.set(propertyName,p.getProperty(propertyName));
    }
  }
}
