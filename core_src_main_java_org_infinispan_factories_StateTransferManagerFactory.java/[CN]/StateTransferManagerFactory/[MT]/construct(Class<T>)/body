{
  if (!configuration.getCacheMode().isClustered())   return null;
  if (configuration.getCacheMode().isDistributed())   return componentType.cast(new DistributedStateTransferManagerImpl());
 else   if (configuration.getCacheMode().isReplicated())   return componentType.cast(new ReplicatedStateTransferManagerImpl());
 else   if (configuration.getCacheMode().isInvalidation())   return componentType.cast(new DummyInvalidationStateTransferManagerImpl());
 else   return null;
}
