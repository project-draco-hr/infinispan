{
  ConfigurationBuilder builder=getDefaultClusteredCacheConfig(CacheMode.REPL_SYNC,true);
  builder.locking().writeSkewCheck(true).isolationLevel(IsolationLevel.REPEATABLE_READ).versioning().enable().scheme(VersioningScheme.SIMPLE).loaders().addCacheLoader().cacheLoader(new CountingCacheStore()).loaders().addCacheLoader().cacheLoader(new DummyInMemoryCacheStore()).transaction().syncCommitPhase(true);
  createClusteredCaches(2,"replication",builder);
}
