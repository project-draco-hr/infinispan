{
  ConfigurationBuilder builder=getDefaultClusteredCacheConfig(CacheMode.REPL_SYNC,true);
  builder.locking().writeSkewCheck(true).isolationLevel(IsolationLevel.REPEATABLE_READ).versioning().enable().scheme(VersioningScheme.SIMPLE).persistence().addStore(DummyInMemoryStoreConfigurationBuilder.class).transaction().syncCommitPhase(true).clustering().hash().numSegments(2);
  createClusteredCaches(2,cacheName,builder);
}
