{
  ConfigurationBuilder cacheCfg=getDefaultClusteredCacheConfig(CacheMode.REPL_SYNC,false);
  cacheCfg.indexing().index(Index.ALL).addProperty("default.indexmanager","org.infinispan.query.indexmanager.InfinispanIndexManager").addProperty("error_handler","org.infinispan.query.helper.StaticTestingErrorHandler");
  List<Cache<String,Car>> cacheList=createClusteredCaches(NUM_NODES,cacheCfg);
  waitForClusterToForm(neededCacheNames);
  for (  Cache cache : cacheList) {
    caches.add(cache);
  }
}
