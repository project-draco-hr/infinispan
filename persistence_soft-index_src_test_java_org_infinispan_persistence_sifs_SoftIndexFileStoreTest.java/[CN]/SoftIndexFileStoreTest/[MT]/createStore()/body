{
  clearTempDir();
  store=new SoftIndexFileStore();
  ConfigurationBuilder builder=TestCacheManagerFactory.getDefaultCacheConfiguration(false);
  builder.persistence().addStore(SoftIndexFileStoreConfigurationBuilder.class).indexLocation(tmpDirectory).dataLocation(tmpDirectory + "/data");
  store.init(createContext(builder.build()));
  store.start();
  return store;
}
