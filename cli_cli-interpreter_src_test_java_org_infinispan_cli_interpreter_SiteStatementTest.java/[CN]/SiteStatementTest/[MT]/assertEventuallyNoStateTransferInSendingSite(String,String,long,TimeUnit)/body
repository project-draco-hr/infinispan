{
  assertEventuallyInSite(siteName,cacheName,new EventuallyAssertCondition<Object,Object>(){
    @Override public boolean assertInCache(    Cache<Object,Object> cache){
      return extractComponent(cache,XSiteStateProvider.class).getCurrentStateSending().isEmpty() && extractComponent(cache,XSiteStateTransferManager.class).getRunningStateTransfers().isEmpty();
    }
  }
,timeout,unit);
}
