{
  if (containsKey(key))   return super.getProperty(key);
 else {
    String legacyKey=legacyKeyMapping.get(key);
    if (legacyKey == null)     return defaultValue;
    String val=super.getProperty(legacyKey);
    if (val != null) {
      warnLegacy(legacyKey,key);
      return val;
    }
 else {
      return defaultValue;
    }
  }
}
