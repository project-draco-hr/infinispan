{
  waitForRehashToComplete(caches);
  for (  Cache c : caches) {
    CacheTopology cacheTopology=extractComponent(c,StateTransferManager.class).getCacheTopology();
    assertEquals(String.format("Wrong topology on cache %s, expected %d and got %s",c,expectedTopologyId,cacheTopology),expectedTopologyId,cacheTopology.getTopologyId());
  }
}
