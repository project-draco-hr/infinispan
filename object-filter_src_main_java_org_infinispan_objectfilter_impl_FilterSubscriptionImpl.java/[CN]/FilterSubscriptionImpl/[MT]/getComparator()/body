{
  if (sortFields != null) {
    if (comparator == null) {
      boolean[] direction=new boolean[sortFields.length];
      for (int i=0; i < sortFields.length; i++) {
        direction[i]=sortFields[i].isAscending();
      }
      comparator=new ComparableArrayComparator(direction);
    }
  }
  return comparator;
}
