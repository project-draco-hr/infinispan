{
  Class<?> clazz=null;
  for (clazz=getDelegate().getClass(); clazz != null; clazz=clazz.getSuperclass()) {
    for (    Method m : clazz.getDeclaredMethods()) {
      if (m.isAnnotationPresent(BeforeClass.class)) {
        m.setAccessible(true);
        m.invoke(getDelegate(),(Object[])null);
      }
    }
  }
}
