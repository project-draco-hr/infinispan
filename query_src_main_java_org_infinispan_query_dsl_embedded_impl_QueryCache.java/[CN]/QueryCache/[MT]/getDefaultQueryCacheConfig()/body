{
  ConfigurationBuilder cfgBuilder=new ConfigurationBuilder();
  cfgBuilder.clustering().cacheMode(CacheMode.LOCAL).transaction().transactionMode(TransactionMode.NON_TRANSACTIONAL).dataContainer().expiration().maxIdle(ENTRY_LIFESPAN,TimeUnit.SECONDS).dataContainer().eviction().maxEntries(MAX_ENTRIES).strategy(EvictionStrategy.LIRS);
  return cfgBuilder;
}
