{
  ConfigurationBuilder cfgBuilder=new ConfigurationBuilder();
  cfgBuilder.clustering().cacheMode(CacheMode.LOCAL).transaction().transactionMode(TransactionMode.NON_TRANSACTIONAL).expiration().maxIdle(ENTRY_LIFESPAN,TimeUnit.SECONDS).eviction().maxEntries(MAX_ENTRIES).strategy(EvictionStrategy.LIRS);
  return cfgBuilder;
}
