{
  this.invoker=interceptorChain;
  ThreadFactory tf=new ThreadFactory(){
    @Override public Thread newThread(    Runnable r){
      String address=rpcManager != null ? rpcManager.getTransport().getAddress().toString() : "local";
      Thread th=new Thread(r,"LockBreakingService," + configuration.getName() + ","+ address);
      th.setDaemon(true);
      return th;
    }
  }
;
  lockBreakingService=new ThreadPoolExecutor(1,1,0L,TimeUnit.MILLISECONDS,new LinkedBlockingDeque<Runnable>(),tf,new ThreadPoolExecutor.CallerRunsPolicy());
}
