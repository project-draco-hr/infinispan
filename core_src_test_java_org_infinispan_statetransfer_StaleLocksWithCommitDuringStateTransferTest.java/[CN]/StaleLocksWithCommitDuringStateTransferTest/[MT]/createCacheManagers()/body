{
  ConfigurationBuilder cb=new ConfigurationBuilder();
  cb.clustering().cacheMode(CacheMode.DIST_SYNC).sync().replTimeout(5000).transaction().transactionMode(TransactionMode.TRANSACTIONAL).cacheStopTimeout(100);
  EmbeddedCacheManager cm1=TestCacheManagerFactory.createClusteredCacheManager(cb);
  EmbeddedCacheManager cm2=TestCacheManagerFactory.createClusteredCacheManager(cb);
  registerCacheManager(cm1,cm2);
  c1=cm1.getCache();
  c2=cm2.getCache();
  waitForClusterToForm();
}
