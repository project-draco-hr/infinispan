{
  for (  Cache c : caches) {
    try {
      if (c != null && c.getStatus() == ComponentStatus.RUNNING) {
        TransactionManager tm=c.getAdvancedCache().getTransactionManager();
        if (tm != null) {
          try {
            tm.rollback();
          }
 catch (          Exception e) {
          }
        }
        if (c.getAdvancedCache().getRpcManager() != null) {
          log.tracef("Local size on %s before stopping: %d",c.getAdvancedCache().getRpcManager().getAddress(),c.getAdvancedCache().withFlags(Flag.CACHE_MODE_LOCAL).size());
        }
 else {
          log.tracef("Local size before stopping: %d",c.getAdvancedCache().withFlags(Flag.CACHE_MODE_LOCAL).size());
        }
        if (clear) {
          try {
            c.clear();
          }
 catch (          Exception ignored) {
          }
        }
        c.stop();
      }
    }
 catch (    Throwable t) {
    }
  }
}
