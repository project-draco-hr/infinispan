{
  for (  EmbeddedCacheManager cm : cacheManagers) {
    try {
      killCaches(getRunningCaches(cm));
    }
 catch (    Throwable e) {
      log.warn("Problems stopping cache manager " + cm,e);
    }
  }
  for (  EmbeddedCacheManager cm : cacheManagers) {
    try {
      if (cm != null)       cm.stop();
    }
 catch (    Throwable e) {
      log.warn("Problems killing cache manager " + cm,e);
    }
  }
}
