{
  if (cacheContainers != null) {
    for (    EmbeddedCacheManager cm : cacheContainers) {
      try {
        try {
          clearContent(cm);
        }
  finally {
          if (cm != null)           cm.stop();
        }
      }
 catch (      Throwable e) {
        log.warn("Problems killing cache manager " + cm,e);
      }
    }
  }
}
