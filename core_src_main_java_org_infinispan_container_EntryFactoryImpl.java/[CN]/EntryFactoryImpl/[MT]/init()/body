{
  useRepeatableRead=configuration.locking().isolationLevel() == IsolationLevel.REPEATABLE_READ;
  clusterModeWriteSkewCheck=useRepeatableRead && configuration.locking().writeSkewCheck() && configuration.clustering().cacheMode().isClustered()&& configuration.versioning().scheme() == VersioningScheme.SIMPLE && configuration.versioning().enabled();
}
