{
  BeanManager bm=InfinispanExtension.getBeanManagerController().getRegisteredBeanManager();
  Class<Mapper<KIn,VIn,KOut,VOut>> clazz=(Class<Mapper<KIn,VIn,KOut,VOut>>)mapper.getClass();
