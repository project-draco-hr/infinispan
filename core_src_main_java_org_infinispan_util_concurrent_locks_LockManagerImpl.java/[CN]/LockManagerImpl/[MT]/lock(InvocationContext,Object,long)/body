{
  if (lockAndRecord(key,ctx,timeoutMillis)) {
    ctx.addLockedKey(key);
    return true;
  }
 else {
    Object owner=getOwner(key);
    if (key instanceof MarshalledValue) {
      key=((MarshalledValue)key).get();
    }
    throw new TimeoutException("Unable to acquire lock after [" + Util.prettyPrintTime(timeoutMillis) + "] on key ["+ key+ "] for requestor ["+ ctx.getLockOwner()+ "]! Lock held by ["+ owner+ "]");
  }
}
