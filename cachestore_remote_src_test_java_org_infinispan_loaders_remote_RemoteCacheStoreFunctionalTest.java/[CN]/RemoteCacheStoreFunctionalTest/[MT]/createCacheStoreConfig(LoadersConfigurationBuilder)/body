{
  localCacheManager=TestCacheManagerFactory.createCacheManager(hotRodCacheConfiguration());
  hrServer=TestHelper.startHotRodServer(localCacheManager);
  loaders.addStore(RemoteCacheStoreConfigurationBuilder.class).remoteCacheName(BasicCacheContainer.DEFAULT_CACHE_NAME).addServer().host("localhost").port(hrServer.getPort());
  return loaders;
}
