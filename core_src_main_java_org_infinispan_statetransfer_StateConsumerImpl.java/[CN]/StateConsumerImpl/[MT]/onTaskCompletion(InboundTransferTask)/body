{
  if (!inboundTransfer.isStartedSuccessfully()) {
    retryOrNotifyCompletion(inboundTransfer);
  }
  stateRequestCompletionService.backgroundTaskFinished(new Callable<Void>(){
    @Override public Void call() throws Exception {
      retryOrNotifyCompletion(inboundTransfer);
      return null;
    }
  }
);
}
