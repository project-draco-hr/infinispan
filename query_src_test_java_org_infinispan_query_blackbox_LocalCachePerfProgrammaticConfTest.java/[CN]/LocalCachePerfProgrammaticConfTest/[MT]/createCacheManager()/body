{
  ConfigurationBuilder cfg=getDefaultStandaloneCacheConfig(true);
  cfg.indexing().index(Index.ALL).addProperty("default.directory_provider","infinispan").addProperty("default.chunk_size","128000").addProperty("default.indexmanager","near-real-time").addProperty("error_handler","org.infinispan.query.helper.StaticTestingErrorHandler").addProperty("default.indexBase",indexDirectory).addProperty("default.indexwriter.merge_factor","30").addProperty("default.indexwriter.merge_max_size","4096").addProperty("default.indexwriter.ram_buffer_size","220").addProperty("default.locking_strategy","native").addProperty("default.sharding_strategy.nbr_of_shards","6");
  enhanceConfig(cfg);
  return TestCacheManagerFactory.createCacheManager(cfg);
