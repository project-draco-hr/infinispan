{
  try {
    long messageId=writeHeader(transport,HotRodConstants.PING_REQUEST);
    transport.flush();
    short respStatus=readHeaderAndValidate(transport,messageId,HotRodConstants.PING_RESPONSE);
    if (respStatus == HotRodConstants.NO_ERROR_STATUS) {
      if (log.isTraceEnabled())       log.tracef("Successfully validated transport: %s",transport);
      return PingResult.SUCCESS;
    }
 else {
      if (log.isTraceEnabled())       log.tracef("Unknown response status: %s",respStatus);
      return PingResult.FAIL;
    }
  }
 catch (  HotRodClientException e) {
    if (e.getMessage().contains("CacheNotFoundException"))     return PingResult.CACHE_DOES_NOT_EXIST;
 else     return PingResult.FAIL;
  }
catch (  Exception e) {
    if (log.isTraceEnabled())     log.tracef(e,"Failed to validate transport: %s",transport);
    return PingResult.FAIL;
  }
}
