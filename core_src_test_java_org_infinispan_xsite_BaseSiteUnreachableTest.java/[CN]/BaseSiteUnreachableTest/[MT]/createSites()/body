{
  GlobalConfigurationBuilder lonGc=GlobalConfigurationBuilder.defaultClusteredBuilder();
  lonGc.sites().addSite().name("LON").sites().addSite().name("NYC").sites().localSite("LON");
  ConfigurationBuilder lon=getLonActiveConfig();
  lon.sites().addBackup().site("NYC").backupFailurePolicy(lonBackupFailurePolicy).strategy(lonBackupStrategy).failurePolicyClass(lonCustomFailurePolicyClass);
  createSite("LON",2,lonGc,lon);
}
