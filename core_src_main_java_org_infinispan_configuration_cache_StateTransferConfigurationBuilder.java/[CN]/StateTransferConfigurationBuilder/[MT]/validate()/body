{
  if (fetchInMemoryState != null && fetchInMemoryState && getClusteringBuilder().cacheMode().isInvalidation())   throw new ConfigurationException("Cache cannot use INVALIDATION mode and have fetchInMemoryState set to true.");
  if (awaitInitialTransfer != null && awaitInitialTransfer && !getClusteringBuilder().cacheMode().isReplicated() && !getClusteringBuilder().cacheMode().isDistributed())   throw new ConfigurationException("awaitInitialTransfer can be enabled only if cache mode is distributed or replicated.");
}
