{
  if (chunkSize <= 0) {
    throw new CacheConfigurationException("chunkSize can not be <= 0");
  }
  if (awaitInitialTransfer != null && awaitInitialTransfer && !getClusteringBuilder().cacheMode().isReplicated() && !getClusteringBuilder().cacheMode().isDistributed())   throw new CacheConfigurationException("awaitInitialTransfer can be enabled only if cache mode is distributed or replicated.");
}
