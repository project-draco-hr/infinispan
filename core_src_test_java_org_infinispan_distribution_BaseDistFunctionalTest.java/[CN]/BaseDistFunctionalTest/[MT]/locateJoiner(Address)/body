{
  for (  Cache c : caches) {
    ConsistentHash dch=getNonUnionConsistentHash(c,SECONDS.toMillis(480));
    int i=0;
    for (    Address a : dch.getCaches()) {
      if (a.equals(joinerAddress))       return i;
      i++;
    }
  }
  throw new RuntimeException("Cannot locate joiner! Joiner is [" + joinerAddress + "]");
}
