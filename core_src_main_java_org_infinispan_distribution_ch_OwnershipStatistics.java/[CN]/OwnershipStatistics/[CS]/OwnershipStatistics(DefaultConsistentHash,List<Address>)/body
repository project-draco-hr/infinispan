{
  this(nodes);
  for (int i=0; i < ch.getNumSegments(); i++) {
    List<Address> owners=ch.locateOwnersForSegment(i);
    for (int j=0; j < owners.size(); j++) {
      Address address=owners.get(j);
      if (nodes.contains(address)) {
        if (j == 0) {
          incPrimaryOwned(address);
        }
        incOwned(address);
      }
    }
  }
}
