{
  localCacheManager=TestCacheManagerFactory.createCacheManager(hotRodCacheConfiguration());
  hrServer=TestHelper.startHotRodServer(localCacheManager);
  persistence.addStore(RemoteCacheStoreConfigurationBuilder.class).remoteCacheName(BasicCacheContainer.DEFAULT_CACHE_NAME).preload(preload).addServer().host("localhost").port(hrServer.getPort());
  return persistence;
}
