{
  final Thread t=new Thread(r,"TestThread-" + r.hashCode());
  spawnedThreads.add(t);
  t.start();
  if (sync) {
    eventually(new Condition(){
      @Override public boolean isSatisfied() throws Exception {
        return t.getState().equals(Thread.State.TERMINATED);
      }
    }
);
  }
  return t;
}
