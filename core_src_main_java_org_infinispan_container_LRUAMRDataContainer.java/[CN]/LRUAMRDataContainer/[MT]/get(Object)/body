{
  int h=hash(k.hashCode());
  Segment s=segmentFor(h);
  LinkedEntry le=s.get(k,h);
  InternalCacheEntry ice=null;
  if (le != null)   ice=le.e;
  if (ice != null) {
    if (ice.isExpired()) {
      remove(k);
      ice=null;
    }
 else {
      ice.touch();
      boolean needToUnlock=false;
      try {
        s.lock();
        needToUnlock=true;
        updateLinks(le);
      }
  finally {
        if (needToUnlock)         s.unlock();
      }
    }
  }
  return ice;
}
