{
  if (validKey(key)) {
    char prefix=' ';
    if (key instanceof String)     prefix='S';
 else     if (key instanceof Integer)     prefix='I';
 else     if (key instanceof Boolean)     prefix='B';
    return prefix + ":" + key;
  }
 else   throw new IllegalArgumentException("Indexing only works with entries keyed on Strings - you passed in a " + key.getClass().toString());
}
