{
  if (cacheConfiguration.clustering().cacheMode() == CacheMode.LOCAL && cacheConfiguration.locking().writeSkewCheck() && cacheConfiguration.locking().isolationLevel() == IsolationLevel.REPEATABLE_READ) {
    lockAcquisitionVisitor=new LocalWriteSkewCheckingLockAcquisitionVisitor();
    needToMarkReads=true;
  }
 else {
    lockAcquisitionVisitor=new LockAcquisitionVisitor();
    needToMarkReads=false;
  }
}
