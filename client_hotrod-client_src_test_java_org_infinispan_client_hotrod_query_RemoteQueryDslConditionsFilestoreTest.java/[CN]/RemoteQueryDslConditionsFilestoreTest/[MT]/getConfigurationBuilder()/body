{
  boolean created=new File(System.getProperty(tmpDirPropertyName) + indexBaseDirName).mkdirs();
  assertTrue(created);
  ConfigurationBuilder builder=hotRodCacheConfiguration();
  builder.indexing().enable().addProperty("default.directory_provider",getDirectoryProvider()).addProperty("default.indexBase",System.getProperty(tmpDirPropertyName) + indexBaseDirName).addProperty("lucene_version","LUCENE_CURRENT");
  return builder;
}
