{
  if (attributes.attribute(USE_REPLICATION_QUEUE).get() && getClusteringBuilder().cacheMode().isDistributed())   throw log.noReplicationQueueDistributedCache();
  if (attributes.attribute(USE_REPLICATION_QUEUE).get() && getClusteringBuilder().cacheMode().isSynchronous())   throw log.replicationQueueOnlyForAsyncCaches();
}
