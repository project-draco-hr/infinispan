{
  InterceptorChain chain=TextProtocolInterceptorChainFactory.getInstance(cache).buildInterceptorChain();
  TextDecoder decoder=new TextDecoder(cache,chain,scheduler);
  NettyDecoder nettyDecoder=new NettyDecoder<TextDecoder.State>(decoder,TextDecoder.State.READ_COMMAND);
  decoder.setCheckpointer(nettyDecoder);
  TextCommandHandler commandHandler=new TextCommandHandler(cache,chain);
  server=new NettyServer(commandHandler,nettyDecoder,null,new InetSocketAddress(host,port),masterThreads,workerThreads,cache.getName());
  server.start();
  log.info("Started Memcached text server bound to {0}:{1}",host,port);
}
