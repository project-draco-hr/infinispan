{
  this.cache=(AdvancedCache<Object,AtomicMap<K,V>>)cache;
  this.cacheForWriting=new DecoratedCache<Object,AtomicMap<K,V>>(this.cache,Flag.SKIP_REMOTE_LOOKUP,Flag.SKIP_CACHE_LOAD);
  this.deltaMapKey=deltaMapKey;
