{
  if (ostart >= ofinish) {
    int i=0;
    while (i == 0)     i=readMoreData();
    if (i == -1)     return -1;
  }
  if (len <= 0) {
    return 0;
  }
  int available=ofinish - ostart;
  if (len < available)   available=len;
  if (b != null) {
    System.arraycopy(obuffer,ostart,b,off,available);
  }
  ostart=ostart + available;
  return available;
}
