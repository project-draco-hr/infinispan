{
  Listener l=ReflectionUtil.getAnnotation(listenerClass,Listener.class);
  if (l == null)   throw new IncorrectListenerException(String.format("Cache listener class %s must be annotated with org.infinispan.notifications.annotation.Listener",listenerClass.getName()));
  if (!Modifier.isPublic(listenerClass.getModifiers()))   throw new IncorrectListenerException(String.format("Cache listener class %s must be public!",listenerClass.getName()));
  return l;
}
