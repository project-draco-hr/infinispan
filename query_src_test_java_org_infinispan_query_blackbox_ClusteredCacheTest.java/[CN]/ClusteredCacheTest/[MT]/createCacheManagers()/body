{
  ConfigurationBuilder cacheCfg=getDefaultClusteredCacheConfig(CacheMode.REPL_SYNC,transactionsEnabled());
  cacheCfg.indexing().enable().indexLocalOnly(false).addProperty("hibernate.search.default.directory_provider","ram").addProperty("hibernate.search.lucene_version","LUCENE_CURRENT");
  enhanceConfig(cacheCfg);
  List<Cache<String,Person>> caches=createClusteredCaches(2,cacheCfg);
  cache1=caches.get(0);
  cache2=caches.get(1);
}
