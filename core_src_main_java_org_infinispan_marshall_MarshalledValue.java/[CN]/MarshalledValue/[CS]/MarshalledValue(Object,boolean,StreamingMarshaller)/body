{
  if (instance == null)   throw new NullPointerException("Null values cannot be wrapped as MarshalledValues!");
  if (marshaller.isMarshallable(instance))   this.instance=instance;
 else   throw new NotSerializableException("Marshalled values can only wrap Objects that can be serialized or marshalled!  Instance of " + instance.getClass() + " won't serialize or marshall.");
  this.equalityPreferenceForInstance=equalityPreferenceForInstance;
  this.marshaller=marshaller;
}
