{
  for (  Cache cache : caches) {
    if (isMasterNode(cache)) {
      TestingUtil.killCacheManagers(cache.getCacheManager());
      caches.remove(cache);
      cacheManagers.remove(cache.getCacheManager());
      if (cache.getCacheConfiguration().clustering().cacheMode() != CacheMode.LOCAL)       TestingUtil.waitForRehashToComplete(caches);
      break;
    }
  }
}
