{
  InputStream is=getClass().getResourceAsStream(classPathResource);
  try {
    ByteArrayOutputStream os=new ByteArrayOutputStream();
    byte[] buf=new byte[1024];
    int len;
    while ((len=is.read(buf)) != -1) {
      os.write(buf,0,len);
    }
    return os.toByteArray();
  }
  finally {
    is.close();
  }
}
