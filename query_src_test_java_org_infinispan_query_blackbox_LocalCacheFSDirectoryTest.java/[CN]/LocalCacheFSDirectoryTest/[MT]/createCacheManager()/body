{
  ConfigurationBuilder cfg=getDefaultStandaloneCacheConfig(true);
  cfg.indexing().enable().indexLocalOnly(false).addProperty("default.directory_provider","filesystem").addProperty("default.indexBase",TMP_DIR + File.separator + "index").addProperty("default.lucene_version","LUCENE_CURRENT");
  return TestCacheManagerFactory.createCacheManager(cfg);
}
