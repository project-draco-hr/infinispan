{
  Properties props=new Properties();
  HotRodServer hotRodServer2=server(1);
  props.put("infinispan.client.hotrod.server_list","boomoo:12345;localhost:" + hotRodServer2.getPort());
  props.put("infinispan.client.hotrod.ping_on_startup","false");
  withRemoteCacheManager(new RemoteCacheManagerCallable(new RemoteCacheManager(props)){
    @Override public void call() throws Exception {
      RemoteCache<Object,Object> cache=rcm.getCache();
      assertFalse(cache.containsKey("k"));
    }
  }
);
}
