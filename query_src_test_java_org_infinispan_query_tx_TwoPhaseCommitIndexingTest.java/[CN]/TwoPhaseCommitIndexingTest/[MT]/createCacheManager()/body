{
  ConfigurationBuilder cfg=getDefaultStandaloneCacheConfig(true);
  cfg.customInterceptors().addInterceptor().after(EntryWrappingInterceptor.class).interceptor(nastyInterceptor).transaction().transactionMode(TransactionMode.TRANSACTIONAL).use1PcForAutoCommitTransactions(false).indexing().index(Index.ALL).addProperty("default.directory_provider","ram").addProperty("lucene_version","LUCENE_CURRENT");
  return TestCacheManagerFactory.createCacheManager(cfg);
}
