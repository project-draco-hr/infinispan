{
  mapAddrWithPhysicalAddr(this,discovery);
  mapAddrWithPhysicalAddr(discovery,this);
  Address localAddr=discovery.getLocalAddr();
  List<PhysicalAddress> physicalAddrs=returnViewsOnly ? null : Arrays.asList((PhysicalAddress)discovery.down(new Event(Event.GET_PHYSICAL_ADDRESS,localAddr)));
  String logicalName=UUID.get(localAddr);
  PingData pingRsp=new PingData(localAddr,discovery.getJGroupsView(),discovery.isServer(),logicalName,physicalAddrs);
  if (log.isTraceEnabled())   log.trace(String.format("Returning ping rsp: %s",pingRsp));
  rsps.add(pingRsp);
}
