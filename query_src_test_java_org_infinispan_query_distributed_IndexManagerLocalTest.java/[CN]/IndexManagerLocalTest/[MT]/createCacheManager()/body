{
  ConfigurationBuilder builder=new ConfigurationBuilder();
  builder.clustering().cacheMode(CacheMode.LOCAL).indexing().index(Index.ALL).addProperty("hibernate.search.lucene_version","LUCENE_CURRENT").addProperty("default.indexmanager","org.infinispan.query.indexmanager.InfinispanIndexManager");
  if (transactionsEnabled()) {
    builder.transaction().transactionMode(TransactionMode.TRANSACTIONAL);
  }
  return TestCacheManagerFactory.createCacheManager(builder);
}
