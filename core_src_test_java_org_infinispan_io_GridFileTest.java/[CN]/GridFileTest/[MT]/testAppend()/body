{
  OutputStream out=fs.getOutput("append.txt");
  try {
    out.write("Hello".getBytes());
  }
  finally {
    out.close();
  }
  out=fs.getOutput("append.txt",true);
  try {
    out.write("World".getBytes());
  }
  finally {
    out.close();
  }
  assertEquals(getContents("append.txt"),"HelloWorld");
}
