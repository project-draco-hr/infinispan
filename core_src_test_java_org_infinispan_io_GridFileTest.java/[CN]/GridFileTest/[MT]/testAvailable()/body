{
  String filePath="available.txt";
  writeToFile(filePath,"abcde" + "fghij" + "klmno"+ "pqrst"+ "uvwxy"+ "z",5);
  InputStream in=fs.getInput(filePath);
  try {
    assertEquals(in.available(),0);
    in.read();
    assertEquals(in.available(),4);
    in.skip(3);
    assertEquals(in.available(),1);
    in.read();
    assertEquals(in.available(),0);
    in.read();
    assertEquals(in.available(),4);
  }
  finally {
    in.close();
  }
}
