{
  ConfigurationBuilder builder=TestCacheManagerFactory.getDefaultCacheConfiguration(true);
  builder.clustering().cacheMode(CacheMode.DIST_SYNC).stateTransfer().fetchInMemoryState(true).l1().enable().sync().replTimeout(10000).transaction().transactionMode(transactionMode).locking().lockAcquisitionTimeout(10000).invocationBatching().disable().deadlockDetection().disable().jmxStatistics().disable();
  return builder;
}
