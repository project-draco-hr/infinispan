{
  startRegistryCache();
  Transaction tx=suspendTx();
  try {
    for (    final ScopedKey<S,K> key : clusterRegistryCache.keySet()) {
      if (key.hasScope(scope)) {
        runCommand(new Runnable(){
          @Override public void run(){
            clusterRegistryCache.remove(key);
          }
        }
);
      }
    }
  }
  finally {
    resumeTx(tx);
  }
}
