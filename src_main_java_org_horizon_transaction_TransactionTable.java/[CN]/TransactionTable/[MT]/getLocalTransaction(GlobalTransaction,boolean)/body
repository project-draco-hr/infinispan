{
  Transaction ltx=getLocalTransaction(gtx);
  if (!assertExists) {
    return ltx;
  }
  if (ltx != null) {
    if (log.isDebugEnabled())     log.debug("Found local TX=" + ltx + ", global TX="+ gtx);
    return ltx;
  }
 else {
    throw new IllegalStateException(" found no local TX for global TX " + gtx);
  }
}
