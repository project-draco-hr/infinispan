{
  if (cacheMode().isClustered() && globalConfig.transport().transport() == null) {
    throw new CacheConfigurationException("Must have a transport set in the global configuration in " + "order to define a clustered cache");
  }
  for (  ConfigurationChildBuilder validatable : Arrays.asList(asyncConfigurationBuilder,hashConfigurationBuilder,l1ConfigurationBuilder,syncConfigurationBuilder,stateTransferConfigurationBuilder,partitionHandlingConfigurationBuilder)) {
    validatable.validate(globalConfig);
  }
}
