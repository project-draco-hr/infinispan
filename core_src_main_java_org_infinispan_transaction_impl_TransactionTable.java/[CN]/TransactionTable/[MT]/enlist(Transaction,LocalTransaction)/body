{
  if (!localTransaction.isEnlisted()) {
    SynchronizationAdapter sync=new SynchronizationAdapter(localTransaction,txCoordinator,commandsFactory,rpcManager,this,clusteringLogic,configuration);
    if (transactionSynchronizationRegistry != null) {
      try {
        transactionSynchronizationRegistry.registerInterposedSynchronization(sync);
      }
 catch (      Exception e) {
        log.failedSynchronizationRegistration(e);
        throw new CacheException(e);
      }
    }
 else {
      try {
        transaction.registerSynchronization(sync);
      }
 catch (      Exception e) {
        log.failedSynchronizationRegistration(e);
        throw new CacheException(e);
      }
    }
    ((SyncLocalTransaction)localTransaction).setEnlisted(true);
  }
}
