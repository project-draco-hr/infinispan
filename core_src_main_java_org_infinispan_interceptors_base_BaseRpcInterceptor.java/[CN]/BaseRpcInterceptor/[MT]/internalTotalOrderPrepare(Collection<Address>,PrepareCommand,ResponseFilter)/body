{
  if (defaultSynchronous && responseFilter == null) {
    return rpcManager.invokeRemotely(recipients,prepareCommand,ResponseMode.SYNCHRONOUS_IGNORE_LEAVERS,getReplicationTimeout(),true,getIgnoreExtraResponseFilter(recipients),true);
  }
 else   if (defaultSynchronous) {
    return rpcManager.invokeRemotely(recipients,prepareCommand,ResponseMode.SYNCHRONOUS_IGNORE_LEAVERS,getReplicationTimeout(),true,responseFilter,true);
  }
 else {
    return rpcManager.invokeRemotely(recipients,prepareCommand,false,true);
  }
}
