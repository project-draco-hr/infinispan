{
  File root=getLocation(cfgLocation,cacheName);
  if (log.isTraceEnabled())   log.tracef("Check if deprecated bucket-based file cache store needs upgrading in: %s",root);
  if (root.exists() && listFilesStrict(root,NUMERIC_NAMED_FILES_FILTER).length > 0) {
    File backupRoot=getBackupLocation(cfgLocation,cacheName);
    if (log.isTraceEnabled())     log.tracef("Deprecated bucket-based detected, create backup in: %s",backupRoot);
    if (backupRoot.exists())     throw log.backupLocationAlreadyExists(backupRoot);
    try {
      backupRoot.mkdirs();
      Streams.copyFolder(root,backupRoot);
    }
 catch (    IOException e) {
      throw log.unableToBackupCacheStore(root,backupRoot,e);
    }
    return backupRoot;
  }
  return null;
}
