{
  ConfigurationBuilder builder=new ConfigurationBuilder();
  builder.indexing().enable().indexLocalOnly(localOnly).addProperty("hibernate.search.default.directory_provider","ram").addProperty("hibernate.search.lucene_version","LUCENE_CURRENT");
  withCacheManager(new CacheManagerCallable(TestCacheManagerFactory.createCacheManager(builder.build())){
    @Override public void call(){
      Cache<Object,Object> cache=cm.getCache();
      cache.stop();
      cache.start();
    }
  }
);
}
