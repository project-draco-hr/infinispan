def writePom(tree, pomFile):
    tree.write('tmp.xml', 'UTF-8')
    in_f = open('tmp.xml')
    out_f = open(pomFile, 'w')
    try:
        for l in in_f:
            newstr = l.replace('ns0:', '').replace(':ns0', '').replace('ns1', 'xsi')
            out_f.write(newstr)
    finally:
        in_f.close()
        out_f.close()
    print (' ... updated %s' % pomFile)
