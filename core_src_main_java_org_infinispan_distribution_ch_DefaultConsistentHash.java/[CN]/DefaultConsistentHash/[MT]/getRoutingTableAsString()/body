{
  StringBuilder sb=new StringBuilder();
  for (int i=0; i < numSegments; i++) {
    if (i > 0) {
      sb.append(", ");
    }
    sb.append(i).append(":");
    for (int j=0; j < segmentOwners[i].size(); j++) {
      sb.append(' ').append(members.indexOf(segmentOwners[i].get(j)));
    }
  }
  return sb.toString();
}
