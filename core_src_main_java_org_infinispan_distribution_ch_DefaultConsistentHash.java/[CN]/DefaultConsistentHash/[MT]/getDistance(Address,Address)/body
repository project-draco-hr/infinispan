{
  if (a1 == null || a2 == null)   throw new NullPointerException("Cannot deal with nulls as parameters!");
  int p1=addresses.indexOf(a1);
  if (p1 < 0)   return -1;
  int p2=addresses.indexOf(a2);
  if (p2 < 0)   return -1;
  if (p1 <= p2)   return p2 - p1;
 else   return addresses.size() - (p1 - p2);
}
