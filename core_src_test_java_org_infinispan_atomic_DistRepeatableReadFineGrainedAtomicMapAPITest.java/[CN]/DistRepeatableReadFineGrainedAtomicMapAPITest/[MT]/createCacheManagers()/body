{
  ConfigurationBuilder c=getDefaultClusteredCacheConfig(CacheMode.DIST_SYNC,true);
  c.transaction().transactionMode(TransactionMode.TRANSACTIONAL).syncCommitPhase(true).lockingMode(LockingMode.PESSIMISTIC).locking().isolationLevel(IsolationLevel.REPEATABLE_READ).locking().lockAcquisitionTimeout(100l);
  c.clustering().hash().numOwners(1);
  createClusteredCaches(2,"atomic",c);
}
