{
  final Configuration c=getDefaultClusteredConfig(cacheMode);
  c.fluent().transaction().transactionManagerLookup(new DummyTransactionManagerLookup()).useSynchronization(useSynchronization).lockingMode(lockingMode);
  c.fluent().hash().rehashEnabled(false).numOwners(3);
  c.fluent().clustering().l1().disable();
  return c;
}
