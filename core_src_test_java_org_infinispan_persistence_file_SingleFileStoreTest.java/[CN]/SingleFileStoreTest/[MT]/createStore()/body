{
  clearTempDir();
  store=new SingleFileStore();
  SingleFileStoreConfiguration fileStoreConfiguration=TestCacheManagerFactory.getDefaultCacheConfiguration(false).persistence().addStore(SingleFileStoreConfigurationBuilder.class).location(this.tmpDirectory).create();
  store.init(new DummyInitializationContext(fileStoreConfiguration,getCache(),getMarshaller(),new ByteBufferFactoryImpl(),new MarshalledEntryFactoryImpl(getMarshaller())));
  store.start();
  return store;
}
