{
  Factory<CacheLoader<K,V>> cacheLoaderFactory=c.getCacheLoaderFactory();
  if (cacheLoaderFactory != null) {
    PersistenceManagerImpl persistenceManager=(PersistenceManagerImpl)cache.getComponentRegistry().getComponent(PersistenceManager.class);
    JCacheLoaderAdapter<K,V> ispnCacheLoader=(JCacheLoaderAdapter<K,V>)persistenceManager.getAllLoaders().get(0);
    cacheLoader=cacheLoaderFactory.create();
    ispnCacheLoader.setCacheLoader(cacheLoader);
  }
}
