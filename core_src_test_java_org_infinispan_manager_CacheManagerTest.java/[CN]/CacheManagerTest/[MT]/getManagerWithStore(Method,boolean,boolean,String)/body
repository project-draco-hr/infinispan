{
  String storeName=storePrefix + m.getName();
  ConfigurationBuilder c=new ConfigurationBuilder();
  c.loaders().shared(isStoreShared).addCacheLoader().cacheLoader(new DummyInMemoryCacheStore(storeName)).clustering().cacheMode(isClustered ? CacheMode.REPL_SYNC : CacheMode.LOCAL);
  return TestCacheManagerFactory.createClusteredCacheManager(c);
}
