{
  waitForView(viewId);
  if (isShuttingDown) {
    log.debugf("Ignoring join request from %s for cache %s, the local cache manager is shutting down",joiner,cacheName);
    return null;
  }
  rebalancePolicy.initCache(cacheName,joinInfo);
  return rebalancePolicy.addJoiners(cacheName,Collections.singletonList(joiner));
}
