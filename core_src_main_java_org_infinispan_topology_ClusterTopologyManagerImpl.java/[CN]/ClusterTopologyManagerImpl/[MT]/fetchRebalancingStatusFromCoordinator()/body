{
  if (!transport.isCoordinator()) {
    ReplicableCommand command=new CacheTopologyControlCommand(null,CacheTopologyControlCommand.Type.POLICY_GET_STATUS,transport.getAddress(),transport.getViewId());
    Address coordinator=transport.getCoordinator();
    try {
      Map<Address,Response> responseMap=transport.invokeRemotely(Collections.singleton(coordinator),command,ResponseMode.SYNCHRONOUS,getGlobalTimeout(),null,DeliverOrder.NONE,false);
      Response response=responseMap.get(coordinator);
      if (response instanceof SuccessfulResponse) {
        globalRebalancingEnabled=((Boolean)((SuccessfulResponse)response).getResponseValue());
      }
 else {
        log.errorReadingRebalancingStatus(coordinator,null);
      }
    }
 catch (    Exception e) {
      log.errorReadingRebalancingStatus(coordinator,e);
    }
  }
}
