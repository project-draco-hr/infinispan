{
  assertEquals(3,tcpConnectionFactory.getServers().size());
  for (int i=0; i < 10; i++) {
    remoteCache.put("k","v");
    if (tcpConnectionFactory.getServers().size() == 3)     break;
    Thread.sleep(1000);
  }
  assertEquals(3,tcpConnectionFactory.getServers().size());
  assertNotNull(tcpConnectionFactory.getConsistentHash(RemoteCacheManager.cacheNameBytes()));
}
