{
  try {
    if (remoteCacheManager != null)     remoteCacheManager.stop();
  }
  finally {
    try {
      try {
        if (hotRodServer1 != null)         hotRodServer1.stop();
      }
  finally {
        try {
          if (hotRodServer2 != null)           hotRodServer2.stop();
        }
  finally {
          if (hotRodServer3 != null)           hotRodServer3.stop();
        }
      }
    }
  finally {
      super.destroy();
    }
  }
}
