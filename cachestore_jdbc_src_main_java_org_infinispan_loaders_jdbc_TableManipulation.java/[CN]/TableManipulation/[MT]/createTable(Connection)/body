{
  assertMandatoryElemenetsPresent();
  String creatTableDdl="CREATE TABLE " + getTableName() + "("+ idColumnName+ " "+ idColumnType+ " NOT NULL, "+ dataColumnName+ " "+ dataColumnType+ ", "+ timestampColumnName+ " "+ timestampColumnType+ ", PRIMARY KEY ("+ idColumnName+ "))";
  if (log.isTraceEnabled())   log.trace("Creating table with following DDL: '" + creatTableDdl + "'.");
  executeUpdateSql(conn,creatTableDdl);
}
