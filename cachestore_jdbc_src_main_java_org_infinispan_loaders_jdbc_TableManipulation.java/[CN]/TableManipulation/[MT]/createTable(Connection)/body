{
  assertMandatoryElementsPresent();
  String createTableDdl="CREATE TABLE " + getTableName() + "("+ idColumnName+ " "+ idColumnType+ " NOT NULL, "+ dataColumnName+ " "+ dataColumnType+ ", "+ timestampColumnName+ " "+ timestampColumnType+ ", PRIMARY KEY ("+ idColumnName+ "))";
  if (log.isTraceEnabled()) {
    log.trace("Creating table with following DDL: '" + createTableDdl + "'.");
  }
  executeUpdateSql(conn,createTableDdl);
}
