{
  GlobalConfigurationBuilder gcfg=new GlobalConfigurationBuilder();
  gcfg.globalJmxStatistics().allowDuplicateDomains(true);
  ConfigurationBuilder cfg=new ConfigurationBuilder();
  cfg.transaction().transactionMode(TransactionMode.TRANSACTIONAL).indexing().index(Index.ALL).addIndexedEntity(getModelFactory().getUserImplClass()).addIndexedEntity(getModelFactory().getAccountImplClass()).addIndexedEntity(getModelFactory().getTransactionImplClass()).addProperty("default.directory_provider","ram").addProperty("error_handler","org.infinispan.all.embeddedquery.testdomain.StaticTestingErrorHandler").addProperty("lucene_version","LUCENE_CURRENT");
  EmbeddedCacheManager cm=new DefaultCacheManager(gcfg.build(),cfg.build());
  return cm;
}
