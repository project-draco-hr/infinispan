{
  String config=TestingUtil.INFINISPAN_START_TAG + "   <default>\n" + "      <indexing enabled=\"true\" indexLocalOnly=\"true\"/>\n"+ "   </default>\n"+ TestingUtil.INFINISPAN_END_TAG;
  InputStream is=new ByteArrayInputStream(config.getBytes());
  cacheManager=TestCacheManagerFactory.fromStream(is);
  cache=cacheManager.getCache();
  return cacheManager;
}
