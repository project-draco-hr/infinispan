{
  GlobalConfigurationBuilder globalBuilder=GlobalConfigurationBuilder.defaultClusteredBuilder();
  amendGlobalConfiguration(globalBuilder,new TransportFlags());
  globalBuilder.globalJmxStatistics().jmxDomain(jmxDomain).mBeanServerLookup(new PerThreadMBeanServerLookup()).enabled(exposeGlobalJmx);
  return createCacheManager(globalBuilder,builder,true);
}
