{
  GlobalConfiguration globalConfiguration;
  if (defaultCacheConfig.getCacheMode().isClustered())   globalConfiguration=GlobalConfiguration.getClusteredDefault();
 else   globalConfiguration=GlobalConfiguration.getNonClusteredDefault();
  amendMarshaller(globalConfiguration);
  minimizeThreads(globalConfiguration);
  if (transactional)   amendJTA(defaultCacheConfig);
  return newDefaultCacheManager(globalConfiguration,defaultCacheConfig,false);
}
