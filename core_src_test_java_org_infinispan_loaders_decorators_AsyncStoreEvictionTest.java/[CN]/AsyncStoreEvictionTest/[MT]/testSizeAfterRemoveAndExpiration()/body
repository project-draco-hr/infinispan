{
  TestingUtil.withCacheManager(new CacheCallable(config(false,1)){
    @Override public void call(){
      cache.put("k1","v1");
      cache.remove("k1");
      int size=cache.size();
      TestingUtil.sleepThread(200);
      assertFalse("remove only works after expiration",size == 1 && cache.size() == 0);
    }
  }
);
}
