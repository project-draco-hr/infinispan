{
  if (cache == null)   throw new IllegalArgumentException("Cache must not be null");
  if (indexName == null)   throw new IllegalArgumentException("index name must not be null");
  if (chunkSize <= 0)   throw new IllegalArgumentException("chunkSize must be a non-null positive integer");
  this.chunkSize=chunkSize;
  this.indexName=indexName;
  this.cache=cache.getAdvancedCache();
}
