{
  cacheCfg=getDefaultClusteredCacheConfig(CacheMode.DIST_SYNC,false);
  cacheCfg.clustering().hash().numSegments(60).numOwners(2).keyPartitioner(new AffinityPartitioner());
  cacheCfg.indexing().index(Index.ALL).addIndexedEntity(Entity.class).addProperty("hibernate.search.default.directory_provider","infinispan").addProperty("hibernate.search.lucene_version","LUCENE_CURRENT").addProperty("entity.indexmanager","org.infinispan.query.affinity.ShardIndexManager");
  createClusteredCaches(3,cacheCfg);
}
