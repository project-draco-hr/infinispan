{
  if (!exists())   return false;
  if (isDirectory()) {
    File[] files=listFiles();
    if (files != null && files.length > 0)     return false;
  }
  fs.remove(getPath(),synchronous);
  if (synchronous)   metadataCache.withFlags(FORCE_SYNCHRONOUS).remove(getPath());
 else   metadataCache.remove(getPath());
  return true;
}
