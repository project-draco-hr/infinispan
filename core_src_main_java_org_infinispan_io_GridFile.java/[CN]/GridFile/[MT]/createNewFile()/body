{
  if (exists())   return false;
  if (!checkParentDirs(getAbsolutePath(),false))   throw new IOException("Cannot create file " + getAbsolutePath() + " (parent dir does not exist)");
  metadataCache.withFlags(FORCE_SYNCHRONOUS).put(getAbsolutePath(),new Metadata(0,System.currentTimeMillis(),chunkSize,Metadata.FILE));
  return true;
}
