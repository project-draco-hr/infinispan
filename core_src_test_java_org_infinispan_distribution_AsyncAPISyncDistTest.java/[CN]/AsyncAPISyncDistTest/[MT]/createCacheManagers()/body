{
  Configuration c=getDefaultClusteredConfig(sync() ? Configuration.CacheMode.DIST_SYNC : Configuration.CacheMode.DIST_ASYNC,true);
  c.setLockAcquisitionTimeout(30,TimeUnit.SECONDS);
