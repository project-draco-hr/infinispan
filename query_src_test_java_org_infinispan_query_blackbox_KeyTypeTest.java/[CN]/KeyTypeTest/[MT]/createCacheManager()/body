{
  ConfigurationBuilder cfg=getDefaultStandaloneCacheConfig(true);
  cfg.transaction().transactionMode(TransactionMode.TRANSACTIONAL).indexing().enable().indexLocalOnly(false).addProperty("hibernate.search.default.directory_provider","ram").addProperty("hibernate.search.lucene_version","LUCENE_CURRENT");
