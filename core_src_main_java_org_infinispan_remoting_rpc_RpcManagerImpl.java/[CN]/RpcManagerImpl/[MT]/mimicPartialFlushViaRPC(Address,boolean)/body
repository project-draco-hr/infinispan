{
  StateTransferControlCommand cmd=cf.buildStateTransferControlCommand(block);
  if (!block)   getTransport().getDistributedSync().releaseSync();
  invokeRemotely(Collections.singletonList(addressToFlush),cmd,ResponseMode.SYNCHRONOUS,configuration.getStateRetrievalTimeout(),true);
  if (block)   getTransport().getDistributedSync().acquireSync();
}
