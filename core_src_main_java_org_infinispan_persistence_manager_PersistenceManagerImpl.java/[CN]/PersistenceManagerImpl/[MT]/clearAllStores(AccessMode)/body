{
  storesMutex.readLock().lock();
  try {
    for (    CacheWriter w : writers) {
      if (w instanceof AdvancedCacheWriter) {
        if (mode.canPerform(configMap.get(w))) {
          ((AdvancedCacheWriter)w).clear();
        }
      }
    }
  }
  finally {
    storesMutex.readLock().unlock();
  }
}
