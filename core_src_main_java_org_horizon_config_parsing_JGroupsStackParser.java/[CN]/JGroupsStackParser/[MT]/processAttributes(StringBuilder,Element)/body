{
  NamedNodeMap attrs=tag.getAttributes();
  int attrLength=attrs.getLength();
  if (attrLength > 0) {
    buffer.append('(');
  }
  for (int a=0; a < attrLength; a++) {
    Attr attr=(Attr)attrs.item(a);
    processSingleAttribute(buffer,attr);
    if (a < attrLength - 1) {
      buffer.append(';');
    }
  }
  if (attrLength > 0) {
    buffer.append(')');
  }
}
