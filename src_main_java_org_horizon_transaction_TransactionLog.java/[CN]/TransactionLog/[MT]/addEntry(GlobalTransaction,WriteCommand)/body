{
  LogEntry entry=new LogEntry(gtx,commands);
  boolean success=false;
  while (!success) {
    try {
      if (log.isTraceEnabled())       log.trace("Added commit entry to tx log {0}",entry);
      entries.put(entry);
      success=true;
    }
 catch (    InterruptedException e) {
      Thread.currentThread().interrupt();
    }
  }
}
