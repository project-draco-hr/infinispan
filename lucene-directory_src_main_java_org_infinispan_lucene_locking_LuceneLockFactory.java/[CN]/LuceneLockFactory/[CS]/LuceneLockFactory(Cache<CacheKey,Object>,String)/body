{
  this.cache=cache;
  this.indexName=indexName;
  tm=cache.getAdvancedCache().getComponentRegistry().getComponent(TransactionManager.class);
  if (tm == null) {
    throw new CacheException("Failed looking up TransactionManager, check if any transaction manager is associated with Infinispan cache: " + cache.getName());
  }
  defLock=new SharedLuceneLock(cache,indexName,DEF_LOCK_NAME,tm);
}
