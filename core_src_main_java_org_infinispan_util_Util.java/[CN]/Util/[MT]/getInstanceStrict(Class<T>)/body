{
  T instance=null;
  try {
    Method factoryMethod=getFactoryMethod(clazz);
    if (factoryMethod != null)     instance=(T)factoryMethod.invoke(null);
  }
 catch (  Exception e) {
    instance=null;
  }
  if (instance == null) {
    instance=clazz.newInstance();
  }
  return instance == null ? null : instance;
}
