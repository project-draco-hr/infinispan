{
  String config=TestingUtil.INFINISPAN_START_TAG + "\n" + "   <default>\n"+ "      <indexing enabled=\"false\" />\n"+ "   </default>\n"+ "   <namedCache name=\"indexingenabled\">\n"+ "      <indexing enabled=\"true\" >\n"+ "         <properties>\n"+ "            <property name=\"default.directory_provider\" value=\"ram\" />\n"+ "            <property name=\"lucene_version\" value=\"LUCENE_CURRENT\" />\n"+ "         </properties>\n"+ "      </indexing>\n"+ "   </namedCache>\n"+ TestingUtil.INFINISPAN_END_TAG;
  System.out.println("Using test configuration:\n\n" + config + "\n");
  InputStream is=new ByteArrayInputStream(config.getBytes());
  final EmbeddedCacheManager cm;
  try {
    cm=TestCacheManagerFactory.fromStream(is);
  }
  finally {
    is.close();
  }
  cache=cm.getCache();
  return cm;
}
