{
  EmbeddedCacheManager cacheManager=new DefaultCacheManager("config/jpa-config-legacy.xml");
  Cache<String,User> userCache=cacheManager.getCache("userCache");
  Cache<String,Document> docCache=cacheManager.getCache("documentCache");
  Cache<VehicleId,Vehicle> vehicleCache=cacheManager.getCache("vehicleCache");
  User user=new User();
  user.setUsername("jdoe");
  user.setFirstName("John");
  user.setLastName("Doe");
  userCache.put(user.getUsername(),user);
  Document doc=new Document();
  doc.setName("hello");
  doc.setTitle("Hello World");
  doc.setArticle("hello there... this is a test");
  docCache.put(doc.getName(),doc);
  Vehicle v=new Vehicle();
  v.setId(new VehicleId("CA","123456"));
  v.setColor("RED");
  vehicleCache.put(v.getId(),v);
  userCache.stop();
  cacheManager.stop();
}
