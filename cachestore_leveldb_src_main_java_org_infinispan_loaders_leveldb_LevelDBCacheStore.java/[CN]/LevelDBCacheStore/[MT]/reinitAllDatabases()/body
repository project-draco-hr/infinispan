{
  try {
    db.close();
  }
 catch (  IOException e) {
    log.warnUnableToCloseDb(e);
  }
  try {
    expiredDb.close();
  }
 catch (  IOException e) {
    log.warnUnableToCloseExpiredDb(e);
  }
  db=reinitDatabase(config.getLocation(),config.getDataDbOptions());
  expiredDb=reinitDatabase(config.getExpiredLocation(),config.getExpiredDbOptions());
}
