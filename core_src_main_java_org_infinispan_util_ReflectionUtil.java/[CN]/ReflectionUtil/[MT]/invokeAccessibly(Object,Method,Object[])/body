{
  try {
    method.setAccessible(true);
    return method.invoke(instance,parameters);
  }
 catch (  InvocationTargetException e) {
    throw new CacheException("Unable to invoke method " + method + " on object "+ (parameters != null ? " with parameters " + Arrays.asList(parameters) : ""),e.getCause());
  }
catch (  Exception e) {
    throw new CacheException("Unable to invoke method " + method + " on object "+ (parameters != null ? " with parameters " + Arrays.asList(parameters) : ""),e);
  }
}
