{
  Field field;
  try {
    field=type.getDeclaredField(fieldName);
    field.setAccessible(true);
    return field.get(target);
  }
 catch (  Exception e) {
    if (type.equals(Object.class)) {
      e.printStackTrace();
      return null;
    }
 else {
      return extractField(type.getSuperclass(),target,fieldName);
    }
  }
}
