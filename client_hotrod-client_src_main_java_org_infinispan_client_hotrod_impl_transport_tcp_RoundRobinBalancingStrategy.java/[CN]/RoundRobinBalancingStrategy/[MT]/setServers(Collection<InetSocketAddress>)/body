{
  writeLock.lock();
  try {
    this.servers=servers.toArray(new InetSocketAddress[servers.size()]);
    index.set(0);
    if (log.isTraceEnabled()) {
      log.tracef("New server list is: %s. Resetting index to 0",Arrays.toString(this.servers));
    }
  }
  finally {
    writeLock.unlock();
  }
}
