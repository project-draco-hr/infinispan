{
  writeLock.lock();
  try {
    this.servers=servers.toArray(new InetSocketAddress[servers.size()]);
    index.set(0);
    if (log.isTraceEnabled()) {
      log.trace("New server list is: " + Arrays.toString(this.servers) + ". Resetting index to 0");
    }
  }
  finally {
    writeLock.unlock();
  }
}
