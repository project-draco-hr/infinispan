{
  Configuration configuration=getDefaultClusteredConfig(Configuration.CacheMode.DIST_SYNC,true).fluent().transaction().transactionManagerLookupClass(RecoveryDummyTransactionManagerLookup.class).recovery().locking().useLockStriping(false).clustering().hash().numOwners(2).clustering().l1().disable().stateRetrieval().fetchInMemoryState(false).build();
  createCluster(configuration,2);
  waitForClusterToForm();
  advancedCache(1).addInterceptorBefore(new ForceFailureInterceptor(),InvocationContextInterceptor.class);
}
