{
  cfg=new Configuration().fluent().loaders().passivation(true).addCacheLoader(new DummyInMemoryCacheStore.Cfg().storeName(this.getClass().getName()).purgeOnStartup(false)).preload(true).indexing().addProperty("hibernate.search.default.directory_provider","ram").addProperty("hibernate.search.lucene_version","LUCENE_CURRENT").build();
  cm=TestCacheManagerFactory.createCacheManager(cfg);
  cache=cm.getCache();
  store=TestingUtil.extractComponent(cache,CacheLoaderManager.class).getCacheStore();
  search=Search.getSearchManager(cache);
}
