{
  ConfigurationBuilder cfg=new ConfigurationBuilder();
  cfg.loaders().preload(true).passivation(true).addCacheLoader().cacheLoader(new DummyInMemoryCacheStore()).purgeOnStartup(true).indexing().enable().addProperty("hibernate.search.default.directory_provider","ram").addProperty("hibernate.search.lucene_version","LUCENE_CURRENT");
  cm=TestCacheManagerFactory.createCacheManager(cfg);
  cache=cm.getCache();
  store=TestingUtil.extractComponent(cache,CacheLoaderManager.class).getCacheStore();
  search=Search.getSearchManager(cache);
}
