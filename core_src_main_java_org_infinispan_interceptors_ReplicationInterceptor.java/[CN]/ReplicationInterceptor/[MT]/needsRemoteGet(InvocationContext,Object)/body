{
  final CacheEntry entry;
  return !ctx.hasFlag(Flag.CACHE_MODE_LOCAL) && !ctx.hasFlag(Flag.SKIP_REMOTE_LOOKUP) && !stateTransferManager.getCacheTopology().getReadConsistentHash().isKeyLocalToNode(rpcManager.getAddress(),key)&& ((entry=ctx.lookupEntry(key)) == null || entry.isNull() || entry.isLockPlaceholder());
}
