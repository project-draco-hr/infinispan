{
  if (cacheName == null || configurationOverrides == null)   throw new NullPointerException("Null arguments not allowed");
  if (cacheName.equals(DEFAULT_CACHE_NAME))   throw new IllegalArgumentException("Cache name cannot be used as it is a reserved, internal name");
  if (configurationOverrides.putIfAbsent(cacheName,configurationOverride.clone()) != null)   throw new DuplicateCacheNameException("Cache name [" + cacheName + "] already in use!");
}
