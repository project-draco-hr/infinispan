{
  try {
    InfinispanConfiguration configuration=InfinispanConfiguration.newInfinispanConfiguration(configurationStream,InfinispanConfiguration.findSchemaInputStream(),new ConfigurationValidatingVisitor());
    initialize(configuration);
  }
 catch (  ConfigurationException ce) {
    throw ce;
  }
catch (  RuntimeException re) {
    throw new ConfigurationException(re);
  }
  if (start)   start();
}
