{
  ConfigurationBuilder cb=getDefaultClusteredCacheConfig(CacheMode.REPL_SYNC,true);
  cb.indexing().index(Index.ALL).addProperty("default.directory_provider","filesystem").addProperty("error_handler","org.infinispan.query.helper.StaticTestingErrorHandler").addProperty("default.indexBase",TMP_DIR + File.separator + indexName).addProperty("lucene_version","LUCENE_CURRENT");
  return cb;
}
