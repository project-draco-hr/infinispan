def upload_schema(base_dir, version):
    "Schema gets rsync'ed to filemgmt.jboss.org, in the and schema_htdoc/infinispan/server directories"
    os.chdir(('%s/target/distribution/infinispan-server-%s/docs/schema' % (base_dir, version)))
    uploader.upload_rsync('.', 'infinispan@filemgmt.jboss.org:/schema_htdocs/infinispan/server/')
    os.chdir(base_dir)
