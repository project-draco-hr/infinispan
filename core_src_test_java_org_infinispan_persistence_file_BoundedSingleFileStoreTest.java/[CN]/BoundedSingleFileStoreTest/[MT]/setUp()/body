{
  clearTempDir();
  store=new SingleFileStore();
  SingleFileStoreConfiguration fileStoreConfiguration=TestCacheManagerFactory.getDefaultCacheConfiguration(false).persistence().addStore(SingleFileStoreConfigurationBuilder.class).location(this.tmpDirectory).maxEntries(1).create();
  marshaller=new TestObjectStreamMarshaller();
  store.init(new DummyInitializationContext(fileStoreConfiguration,getCache(),marshaller,new ByteBufferFactoryImpl(),new MarshalledEntryFactoryImpl(marshaller)));
  store.start();
}
