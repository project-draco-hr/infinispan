{
  cfg=new ConfigurationBuilder();
  cfg.loaders().addStore(DummyInMemoryCacheStoreConfigurationBuilder.class).storeName(this.getClass().getName()).transaction().transactionMode(TransactionMode.TRANSACTIONAL);
  cm=TestCacheManagerFactory.createCacheManager(cfg);
  cache=cm.getCache();
