{
  this.classLoader=classLoader;
  InputStream stream=null;
  try {
    stream=config.openStream();
    loadFromStream(stream);
  }
 catch (  IOException e) {
    throw new HotRodClientException("Could not read URL:" + config,e);
  }
 finally {
    try {
      if (stream != null)       stream.close();
    }
 catch (    IOException e) {
    }
  }
  if (start)   start();
}
