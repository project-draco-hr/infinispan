{
  for (int i=0; i < 20; i++) {
    boolean success=true;
    for (int j=0; j < channels.length; j++) {
      View view=channels[j].getView();
      if (view == null) {
        success=false;
        break;
      }
      success=success && (view.size() == channels.length);
    }
    if (success)     return;
    Thread.sleep(1000);
  }
  fail("Could not for cluster in given timeout");
}
