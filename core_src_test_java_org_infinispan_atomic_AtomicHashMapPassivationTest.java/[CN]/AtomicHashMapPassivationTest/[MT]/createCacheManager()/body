{
  ConfigurationBuilder c=getDefaultStandaloneCacheConfig(true);
  c.invocationBatching().enable().storeAsBinary().enable().persistence().passivation(true).addStore(DummyInMemoryStoreConfigurationBuilder.class);
  EmbeddedCacheManager cm=TestCacheManagerFactory.createCacheManager(c);
  cache=cm.getCache();
  loader=TestingUtil.getFirstLoader(cache);
  return cm;
}
