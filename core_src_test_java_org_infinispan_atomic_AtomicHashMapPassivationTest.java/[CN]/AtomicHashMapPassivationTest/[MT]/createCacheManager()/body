{
  ConfigurationBuilder c=getDefaultStandaloneCacheConfig(true);
  c.invocationBatching().enable().storeAsBinary().enable().loaders().passivation(true).addStore(DummyInMemoryCacheStoreConfigurationBuilder.class);
  EmbeddedCacheManager cm=TestCacheManagerFactory.createCacheManager(c);
  cache=cm.getCache();
  store=TestingUtil.extractComponent(cache,CacheLoaderManager.class).getCacheStore();
  return cm;
}
