{
  Configuration invalidAsync=getDefaultClusteredConfig(Configuration.CacheMode.INVALIDATION_ASYNC,false);
  createClusteredCaches(2,"invalidAsync",invalidAsync);
  Configuration replQueue=getDefaultClusteredConfig(Configuration.CacheMode.INVALIDATION_ASYNC,false);
  replQueue.setUseReplQueue(true);
  defineConfigurationOnAllManagers("invalidReplQueueCache",replQueue);
  Configuration asyncMarshall=getDefaultClusteredConfig(Configuration.CacheMode.INVALIDATION_ASYNC,false);
  asyncMarshall.setUseAsyncMarshalling(true);
  defineConfigurationOnAllManagers("invalidAsyncMarshallCache",asyncMarshall);
}
