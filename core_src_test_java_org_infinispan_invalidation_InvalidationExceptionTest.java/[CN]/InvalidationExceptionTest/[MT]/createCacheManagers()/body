{
  ConfigurationBuilder invalidAsync=getDefaultClusteredCacheConfig(CacheMode.INVALIDATION_ASYNC,false);
  createClusteredCaches(2,"invalidAsync",invalidAsync);
  ConfigurationBuilder replQueue=getDefaultClusteredCacheConfig(CacheMode.INVALIDATION_ASYNC,false);
  replQueue.clustering().async().useReplQueue(true);
  defineConfigurationOnAllManagers("invalidReplQueueCache",replQueue);
  ConfigurationBuilder asyncMarshall=getDefaultClusteredCacheConfig(CacheMode.INVALIDATION_ASYNC,false);
  asyncMarshall.clustering().async().asyncMarshalling();
  defineConfigurationOnAllManagers("invalidAsyncMarshallCache",asyncMarshall);
}
