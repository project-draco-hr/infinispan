{
  ConfigurationBuilder c=getDefaultStandaloneCacheConfig(isTransactional());
  c.indexing().index(Index.LOCAL).addProperty("default.indexmanager","org.infinispan.query.indexmanager.InfinispanIndexManager").addProperty("default.directory_provider","infinispan").addProperty("lucene_version","LUCENE_48");
  return TestCacheManagerFactory.createCacheManager(c);
}
