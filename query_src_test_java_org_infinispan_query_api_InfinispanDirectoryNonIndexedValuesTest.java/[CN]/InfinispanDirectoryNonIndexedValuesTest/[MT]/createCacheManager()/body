{
  ConfigurationBuilder c=getDefaultStandaloneCacheConfig(isTransactional());
  c.indexing().index(Index.LOCAL).addProperty("default.indexmanager","org.infinispan.query.indexmanager.InfinispanIndexManager").addProperty("error_handler","org.infinispan.query.helper.StaticTestingErrorHandler");
  return TestCacheManagerFactory.createCacheManager(c);
}
