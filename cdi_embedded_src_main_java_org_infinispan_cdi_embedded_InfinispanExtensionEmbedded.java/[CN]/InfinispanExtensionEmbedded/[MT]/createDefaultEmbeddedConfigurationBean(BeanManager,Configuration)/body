{
  return new BeanBuilder<Configuration>(beanManager).beanClass(InfinispanExtensionEmbedded.class).addTypes(Object.class,Configuration.class).scope(Dependent.class).qualifiers(defaultQualifiers()).beanLifecycle(new ContextualLifecycle<Configuration>(){
    @Override public Configuration create(    Bean<Configuration> bean,    CreationalContext<Configuration> creationalContext){
      return configuration;
    }
  }
).create();
}
