    @Override public void run(){
      try {
        tm(1).begin();
        advancedCache(1).lock("k");
        tm(1).suspend();
      }
 catch (      Exception e) {
        log.error(e);
      }
    }
  }
,false);
  eventually(new Condition(){
    @Override public boolean isSatisfied() throws Exception {
      return interceptor.receivedReplRequest;
    }
  }
);
  TestingUtil.killCacheManagers(manager(1));
