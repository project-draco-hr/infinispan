{
  if (value != null) {
    Class<?> potentialNewType=value.getClass();
    if (!this.knownClasses.containsValue(potentialNewType)) {
      mutating.lock();
      try {
        enableClassesIncrementally(new Class[]{potentialNewType},true);
      }
  finally {
        mutating.unlock();
      }
    }
  }
}
